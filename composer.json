{
    "name": "pixelworxio/filament-ai-action",
    "description": "AI-powered actions for Filament v5 â€” streaming modal, structured output, intelligent table actions",
    "keywords": ["laravel", "ai", "actions", "filament", "modal", "structured output", "table actions"],
    "type": "filament-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "@whoisthisstud",
            "email": "44807533+whoisthisstud@users.noreply.github.com",
            "role": "Author"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "filament/filament": "^5.0",
        "pixelworxio/laravel-ai-action": "^1.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "orchestra/testbench": "^10.0",
        "larastan/larastan": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8"
    },
    "autoload": { "psr-4": { "Pixelworxio\\FilamentAiAction\\": "src/" } },
    "autoload-dev": { "psr-4": { "Pixelworxio\\FilamentAiAction\\Tests\\": "tests/" } },
    "extra": {
        "laravel": { "providers": ["Pixelworxio\\FilamentAiAction\\FilamentAiActionServiceProvider"] },
        "filament": { "plugins": ["Pixelworxio\\FilamentAiAction\\FilamentAiActionPlugin"] }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
